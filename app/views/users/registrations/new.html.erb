<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-xl text-gray-900"><a href="https://simplyalwaysawake.com/">Simply Always Awake</a></h2>
    <h2 class="text-center text-xl text-gray-900">Community Locator</h2>
    <h2 class="mt-8 text-center text-3xl font-bold leading-9 tracking-tight text-gray-900">Sign up</h2>
  </div>

  <%= render "users/shared/flash_messages" %>
  <%= render "users/shared/error_messages" %>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <form action="/users" method="POST">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <div>
        <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
        <div class="mt-2">
          <input id="email" name="user[email]" type="email" autofocus autocomplete="email" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
        </div>
      </div>

      <div class="mt-6">
        <div class="flex items-center justify-between">
          <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
        </div>
        <div data-controller="show-password-toggle" class="relative mt-2 rounded-md shadow-sm">
          <input data-show-password-toggle-target="password" id="password" name="user[password]" type="password" autocomplete="current-password" required class="block w-full rounded-md border-0 py-1.5 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
          <div data-action="click->show-password-toggle#toggle" class="absolute inset-y-0 right-0 flex items-center pr-3">
            <div data-show-password-toggle-target="showButton" >
              <%= heroicon "eye", variant: :outline, options: {class: "h-5, w-5" } %>
            </div>
            <div data-show-password-toggle-target="hideButton" class="hidden">
              <%= heroicon "eye-slash", variant: :outline, options: {class: "h-5, w-5" } %>
            </div>
          </div>
        </div>
      </div>

      <fieldset class="mt-6">
        <div class="space-y-5">
          <div class="relative flex items-start">
            <div class="flex h-6 items-center">
              <input id="consent-to-share-email" required aria-describedby="consent-to-share-email-description" name="consent-to-share-email" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
            </div>
            <div class="ml-3 text-sm leading-6">
              <span id="consent-to-share-email-description" class="text-gray-800">I agree to share my email address with other users</span>
            </div>
          </div>
        </div>
      </fieldset>

      <fieldset class="mt-2">
        <div class="space-y-5">
          <div class="relative flex items-start">
            <div class="flex h-6 items-center">
              <input id="user-agreement" required aria-describedby="user-agreement-description" name="user-agreement" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
            </div>
            <div class="ml-3 text-sm leading-6">
              <span id="user-agreement-description" class="text-gray-800">I agree to the terms of the</span>
              <%= link_to 'User Agreement', terms_path, target: :_blank, class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500" %>
            </div>
          </div>
        </div>
      </fieldset>

      <div class="mt-6 w-full flex justify-center">
        <!-- If the reCAPTCHA fails, the page is re-rendered. 'noscript: false' makes sure the reCAPTCHA is reloaded. -->
        <%= recaptcha_tags noscript: false %>
      </div>

      <div class="mt-6">
        <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Sign up</button>
      </div>
    </form>

    <%= render "users/shared/links" %>
  </div>
</div>

